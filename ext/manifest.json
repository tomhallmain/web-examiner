{
  "name": "Web Examiner",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Scripts to make browser testing more efficient",
  "content_scripts": [{
    "matches": [
      "https://*/",
      "https://*/*"
    ],
    "js": [ "loader.js" ],
    "persistent": true
  }],
  "browser_action": {
    "default_icon": "detective.png",
    "default_title": "Open Web Examiner",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "activeTab",
    "tabs",
    "debugger"
  ],
  "web_accessible_resources": [
    "script.js"
  ]
}
